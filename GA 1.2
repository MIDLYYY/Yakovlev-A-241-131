#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    srand(time(0));
    const int SIZE = 10;
    int arr[SIZE];
    
    // Заполнение массива случайными числами от 0 до 100
    for (int i = 0; i < SIZE; i++) {
        arr[i] = rand() % 101;  // 0-100
    }
    
    cout << "Исходный массив: ";
    for (int i = 0; i < SIZE; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    
    // Сортировка выбором по убыванию
    for (int i = 0; i < SIZE - 1; i++) {
        int maxIndex = i;  // Ищем максимальный элемент
        for (int j = i + 1; j < SIZE; j++) {
            if (arr[j] > arr[maxIndex]) {  // Знак > для убывания
                maxIndex = j;
            }
        }
        // Обмен элементов
        int temp = arr[i];
        arr[i] = arr[maxIndex];
        arr[maxIndex] = temp;
    }
    
    cout << "Отсортированный массив (по убыванию): ";
    for (int i = 0; i < SIZE; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    
    return 0;
}
