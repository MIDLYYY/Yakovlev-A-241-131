#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int main() {
    srand(time(0));
    
    // Создаем и заполняем матрицу 3x3
    int matrix[3][3];
    
    cout << "Исходная матрица:" << endl;
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            matrix[i][j] = rand() % (61 - 5 + 1) + 5;
            cout << matrix[i][j] << " ";
        }
        cout << endl;
    }
    
    // Создаем отдельный массив из первого столбца
    int firstColumn[3];
    for (int i = 0; i < 3; i++) {
        firstColumn[i] = matrix[i][0];
    }
    
    // Сортируем первый столбец пузырьком (для простоты)
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 2 - i; j++) {
            if (firstColumn[j] > firstColumn[j + 1]) {
                // Меняем местами в массиве первого столбца
                int temp = firstColumn[j];
                firstColumn[j] = firstColumn[j + 1];
                firstColumn[j + 1] = temp;
                
                // Меняем местами ВСЕ строки в матрице
                for (int k = 0; k < 3; k++) {
                    int tempRow = matrix[j][k];
                    matrix[j][k] = matrix[j + 1][k];
                    matrix[j + 1][k] = tempRow;
                }
            }
        }
    }
    
    cout << "\nМатрица после сортировки первого столбца:" << endl;
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            cout << matrix[i][j] << " ";
        }
        cout << endl;
    }
    
    return 0;
}
