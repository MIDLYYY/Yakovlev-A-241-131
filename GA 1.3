#include <iostream>       // Подключаем библиотеку для ввода/вывода (cout, cin)
#include <cstdlib>        // Подключаем библиотеку для генерации случайных чисел (rand(), srand())
#include <ctime>          // Подключаем библиотеку для работы со временем (time())
#include <string>         // Подключаем библиотеку для работы со строками
#include <vector>         // Подключаем библиотеку для работы с векторами (динамическими массивами)

using namespace std;      // Используем стандартное пространство имен, чтобы не писать std:: перед каждой командой

// Функция для генерации случайного номера телефона в формате "XX-XX-XX"
string generatePhoneNumber() {                    // Объявляем функцию без параметров, возвращающую строку
    string phone = "";                            // Создаем пустую строку для хранения номера телефона
    
    for (int i = 0; i < 6; i++) {                 // Цикл для генерации 6 случайных цифр
        phone += to_string(rand() % 10);          // Добавляем случайную цифру (0-9) в строку телефона
        if (i == 1 || i == 3) {                   // Если это 2-я или 4-я цифра (индексы 1 и 3)
            phone += "-";                         // Добавляем дефис после 2-х и 4-х цифр
        }                                         // Конец условия
    }                                             // Конец цикла
    
    return phone;                                 // Возвращаем сгенерированный номер телефона
}

// Функция для вывода списка телефонов на экран
void printPhoneList(const vector<string>& phones) {  // Объявляем функцию с параметром: вектор строк (константная ссылка)
    for (int i = 0; i < phones.size(); i++) {        // Цикл от 0 до размера вектора минус 1
        cout << i + 1 << ". " << phones[i] << endl;  // Выводим номер по порядку и телефон, переходим на новую строку
    }                                                 // Конец цикла
}

// Функция сортировки выбором для массива строк (по возрастанию)
void selectionSortPhones(vector<string>& phones) {    // Объявляем функцию с параметром: вектор строк (по ссылке)
    int n = phones.size();                           // Получаем размер вектора и сохраняем в переменную n
    
    for (int i = 0; i < n - 1; i++) {                // Внешний цикл: проходим по всем элементам кроме последнего
        // Находим минимальный элемент в неотсортированной части
        int minIndex = i;                            // Предполагаем, что минимальный элемент - текущий (с индексом i)
        for (int j = i + 1; j < n; j++) {            // Внутренний цикл: перебираем элементы справа от текущего
            if (phones[j] < phones[minIndex]) {      // Если текущий элемент меньше предполагаемого минимального
                minIndex = j;                        // Запоминаем индекс нового минимального элемента
            }                                        // Конец условия
        }                                            // Конец внутреннего цикла
        
        // Меняем местами найденный минимальный элемент с первым элементом неотсортированной части
        if (minIndex != i) {                         // Проверяем, нужно ли менять элементы (если minIndex не равен i)
            string temp = phones[i];                 // Сохраняем текущий элемент во временной строковой переменной
            phones[i] = phones[minIndex];            // В текущую позицию записываем минимальный элемент
            phones[minIndex] = temp;                 // На место минимального записываем бывший текущий элемент
        }                                            // Конец условия замены
    }                                                // Конец внешнего цикла
}

int main() {                                         // Главная функция программы, с неё начинается выполнение
    // Инициализация генератора случайных чисел
    srand(time(0));                                  // Устанавливаем начальное значение для генератора случайных чисел
                                                     // time(0) возвращает текущее время в секундах
    
    const int NUM_PHONES = 10;                       // Объявляем константу для количества телефонов в списке
    vector<string> phoneList;                        // Объявляем вектор строк для хранения списка телефонов
    
    // Заполнение списка случайными номерами телефонов
    cout << "Генерация " << NUM_PHONES << " случайных номеров телефонов..." << endl;  // Выводим сообщение
    for (int i = 0; i < NUM_PHONES; i++) {           // Цикл для создания заданного количества телефонов
        phoneList.push_back(generatePhoneNumber());  // Добавляем сгенерированный телефон в конец вектора
    }                                                // Конец цикла
    
    // Вывод исходного списка телефонов
    cout << "\nИсходный список телефонов:" << endl;  // Выводим заголовок
    printPhoneList(phoneList);                       // Вызываем функцию для вывода списка телефонов
    
    // Сортировка списка телефонов по возрастанию
    selectionSortPhones(phoneList);                  // Вызываем функцию сортировки выбором
    
    // Вывод отсортированного списка телефонов
    cout << "\nОтсортированный список телефонов (по возрастанию):" << endl;  // Выводим заголовок
    printPhoneList(phoneList);                       // Вызываем функцию для вывода отсортированного списка
    
    return 0;                                        // Возвращаем 0, что означает успешное завершение программы
}
