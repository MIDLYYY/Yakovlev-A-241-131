#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
    int N;
    cin >> N;
    
    vector<pair<int, int>> requests(N);
    for (int i = 0; i < N; i++) {
        cin >> requests[i].second >> requests[i].first; // (окончание, начало)
    }
    
    // Сортируем по времени окончания
    sort(requests.begin(), requests.end());
    
    int count = 0;
    int last_end = 0;
    
    for (int i = 0; i < N; i++) {
        int start = requests[i].second;
        int end = requests[i].first;
        
        // Если лекция начинается после окончания предыдущей
        if (start >= last_end) {
            count++;
            last_end = end;
        }
    }
    
    cout << count << endl;
    
    return 0;
}
